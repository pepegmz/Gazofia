<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:fitsSystemWindows="true"
    sothree:umanoPanelHeight="68dp"
    sothree:umanoShadowHeight="4dp">

    <RelativeLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.gazofiadevelopers.gazofiaapp.GazofiaMain" />

        <RelativeLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/primary_darker"
            android:visibility="gone">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/android_gridview_example"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/GridLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="4"
                    android:rowCount="3"
                    android:orientation="horizontal"
                    android:layout_columnWeight="10"
                    tools:context=".GazofiaMain" >

                    <ImageView
                        android:src="@drawable/fuel_mark_green"
                        android:layout_columnWeight=".25"
                        android:layout_margin="5dp"
                        android:padding="5dp"

                        />
                    <ImageView
                        android:src="@drawable/fuel_mark_red"
                        android:layout_columnWeight=".25"
                        android:layout_margin="5dp"
                        android:padding="5dp"

                        />
                    <ImageView
                        android:src="@drawable/fuel_mark_yellow"
                        android:layout_columnWeight=".25"
                        android:layout_margin="5dp"
                        android:padding="5dp"

                        />
                    <ImageView
                        android:src="@drawable/fuel_mark_orange"
                        android:layout_columnWeight=".25"
                        android:layout_margin="5dp"
                        android:padding="5dp"

                        />
                    <ImageView
                        android:src="@drawable/drop_green_cheap"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:layout_columnWeight=".25"
                        />
                    <ImageView
                        android:src="@drawable/drop_red_cheap"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:layout_columnWeight=".25"
                        />
                    <ImageView
                        android:src="@drawable/drop_black_cheap"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:layout_columnWeight=".25"
                        />
                    <ImageView
                        android:src="@drawable/wc"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:layout_columnWeight=".25"
                        />
                    <ImageView
                        android:src="@drawable/ecologial"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:layout_columnWeight=".25"
                        />
                    <ImageView
                        android:src="@drawable/electric_station"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:layout_columnWeight=".25"
                        />
                    <ImageView
                        android:src="@drawable/restaurant"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:layout_columnWeight=".25"
                        />
                    <ImageView
                        android:src="@drawable/scale"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:layout_columnWeight=".25"
                        />

                </GridLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutContent2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.quickmatch.MenuActivity"
        tools:showIn="@layout/activity_gazofia_main"
        android:background="@color/white"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:paddingTop="5dp"
                android:src="@drawable/fuel_mark_green" />

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Gas Station Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:textSize="12dp"
                android:layout_height="wrap_content"
                android:text="Calle, Col, Num" />
                </LinearLayout>
            </LinearLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/drop_green_normal"
                        android:padding="5dp"
                        />

                    <TextView
                        android:id="@+id/txt_price_magnum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textColor="@color/black"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/drop_red_normal"
                        android:padding="5dp"
                        />

                    <TextView
                        android:id="@+id/txt_price_premium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textColor="@color/black"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/drop_black_normal"
                        android:padding="5dp"
                        />

                    <TextView
                        android:id="@+id/txt_price_diesel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/fuel_mark_green"
                        android:padding="5dp"
                        />

                    <TextView
                        android:id="@+id/txt_status_gas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sin Anomalias"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/wc"
                        android:padding="5dp"
                        />

                    <TextView
                        android:id="@+id/txt_wc_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gratis"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/restaurant"
                        android:padding="5dp"
                        />

                    <TextView
                        android:id="@+id/txt_restaurant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Markets"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/scale"
                        android:padding="5dp"
                        />

                    <TextView
                        android:id="@+id/txt_scale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bascula"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                </LinearLayout>

            </ScrollView>




        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>

